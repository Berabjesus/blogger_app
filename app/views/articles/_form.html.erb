<%= form_for(@article) do |f| %>
<br/>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <div>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </div>
  <p>
    <%= f.submit 'Save Blog' %>
  </p>
<% end %>