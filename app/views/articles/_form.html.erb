<%= form_for(@article, html: {multipart: true}) do |f| %>
<br/>
  <ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
  </ul>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <div>
    <%= f.label :tag_list %><br />
    <%= f.text_field :tag_list %>
  </div>
  <p>
  <% if @article.image.exists? %>
      <%= image_tag @article.image.url %><br/>
      <%= @article.image_file_name %><br/>
      <%= f.label :image, "Replace your Image" %><br />
  <% else%>
    <%= f.label :image, "Attach an Image" %><br />
  <% end %>
    
    <%= f.file_field :image %>
  </p>

  <p>
    <%= f.submit 'Save Blog' %>
  </p>
<% end %>